{
  "name": "poops",
  "version": "0.1.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codersforcauses/poops.git"
  },
  "author": "Coders for Causes",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/codersforcauses/poops/issues"
  },
  "homepage": "https://github.com/codersforcauses/poops#readme",
  "scripts": {
    "dev": "next dev",
    "dev:sec": "next dev -p 3001 | local-ssl-proxy --key certificates/localhost-key.pem --cert certificates/localhost.pem --source 3000 --target 3001",
    "build": "next build",
    "start": "next start",
    "start:sec": "next start -p 3001 | local-ssl-proxy --key certificates/localhost-key.pem --cert certificates/localhost.pem --source 3000 --target 3001",
    "lint": "next lint",
    "lint:fix": "eslint src --fix && yarn format",
    "lint:strict": "eslint --max-warnings=0 src",
    "typecheck": "tsc --noEmit --incremental false",
    "test:watch": "jest --watch",
    "test": "jest",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "prepare": "husky install"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.1.1",
    "@fortawesome/free-brands-svg-icons": "^6.1.1",
    "@fortawesome/free-regular-svg-icons": "^6.1.1",
    "@fortawesome/free-solid-svg-icons": "^6.1.1",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@heroicons/react": "^1.0.6",
    "babel-plugin-macros": "^3.1.0",
    "clsx": "^1.1.1",
    "firebase": "^9.8.4",
    "moment": "^2.29.4",
    "next": "^12.1.6",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-icons": "^4.4.0",
    "react-select": "^5.4.0",
    "sharp": "^0.30.7",
    "tailwind-merge": "^1.2.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.2",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@types/react": "^18.0.11",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "autoprefixer": "^10.4.7",
    "critters": "^0.0.16",
    "eslint": "^8.17.0",
    "eslint-config-next": "^12.1.6",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jsx-a11y": "^6.6.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.5.0",
    "local-ssl-proxy": "^1.3.0",
    "postcss": "^8.4.14",
    "prettier": "^2.6.2",
    "prettier-plugin-tailwindcss": "^0.1.11",
    "tailwind-styled-components": "^2.1.8",
    "tailwindcss": "^3.1.2",
    "typescript": "^4.7.3"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint --max-warnings=0",
      "prettier -w"
    ],
    "src/**/*.{json,css,scss,md}": [
      "prettier -w"
    ]
  }
}
